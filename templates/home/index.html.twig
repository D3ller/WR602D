{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="flex flex-col items-center gap-3.5">
        <h1 class="text-5xl font-bold text-center max-w-2xl">Générer des PDFs facilement et sans efforts</h1>

        <p class="text-lg text-zinc-500 text-center">En seulement un clique générer un pdf de votre site web.</p>

        {% if app.user %}
        <div class="flex gap-3.5 mt-5">
            <a class="button" href="/generate/url">URL vers PDF</a>
            <a class="button outline" href="/generate/html">HTML vers PDF</a>
        </div>
        {% else %}
            <a class="button" href="/login">Découvrir maintenant</a>
        {% endif %}

    </div>
{% endblock %}
