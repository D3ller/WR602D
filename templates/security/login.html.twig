{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form class="flex flex-col gap-3.5 max-w-lg mx-auto" method="post">

        <h1 class="text-3xl font-bold text-center">Se connecter</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="flex flex-col gap-2">
            <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
                   autocomplete="email" required autofocus>
        </div>

        <div class="flex flex-col gap-2">
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="text-sm mt-5" type="submit">
            Se connecter
        </button>
    </form>
{% endblock %}
