{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}

    <div class="max-w-lg mx-auto">
        <h1 class="mb-5 text-4xl font-bold">Votre historique</h1>
        {% if app.user.files|length >= 1 %}
        <div class="border-x border-y rounded-md border-zinc-200 bg-amber-50/50">
            {% for file in app.user.files %}
            <div class="p-3.5 border-zinc-200 flex justify-between {{ loop.index % 2 ? '' : 'border-y' }}">{{ file.getCreatedAt|date('d/m/Y H:i') }} <a class="text-blue-500 underline" href={{ file.name }} download>Téléchargement</a></div>
            {% endfor %}
        </div>
            {% else %}
            <p>Aucun fichier généré</p>
        {% endif %}
    </div>

{% endblock %}